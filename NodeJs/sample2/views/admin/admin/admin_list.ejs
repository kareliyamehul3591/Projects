                        $('#update_form').validate({ // initialize the plugin
                            errorClass: "error",
                            rules: {
                                f_name: {
                                    required: true,
                                    alpha:true 
                                },
                                l_name: {
                                    required: true,
                                    alpha:true 
                                },
                                email: {
