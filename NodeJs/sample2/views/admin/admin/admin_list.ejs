                                    required: true,
                                }

                            },
                            messages: {
                                f_name: {
                                    required: 'Please Enter FirstName',
                                },
                                l_name: {
                                    required: 'Please Enter LastName',
                                },
                                email: {
                                    required: 'Please Enter Email',
                                },
                                country_code: {
                                    required: 'Please Enter Country Code',
                                },
                                mobile: {
                                    required: 'Please Enter MobileNumber',
                                },
                                status: {
                                    required: 'Please Select Status',
