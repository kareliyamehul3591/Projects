<%- contentFor('HeaderCss') %>
    <!-- perticular page css -->

    <!-- DataTables -->
    <link href="<%= process.env.AAP_URL %>public/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet"
        type="text/css" />
    <link href="<%= process.env.AAP_URL %>public/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet"
        type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="<%= process.env.AAP_URL %>public/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet"
        type="text/css" />
    <!--sweetalert-->
    <link href="<%= process.env.AAP_URL %>public/plugins/sweet-alert2/sweetalert2.min.css" rel="stylesheet"
        type="text/css">

    <%- contentFor('body') %>

        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <h4 class="page-title">Transaction List</h4>
                            <!--  <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="<%= process.env.AAP_URL %>">Home</a></li>
                                <li class="breadcrumb-item"><a href="javascript:void(0);">Appointments</a></li>
                                <li class="breadcrumb-item active">Appointments List</li>
                            </ol> -->

                            <!--  <div class="state-information d-none d-sm-block">
                                <div class="state-graph">
                                     <a href="<%= process.env.AAP_URL %>admin/appointments/calendar-view" class="btn btn-success waves-effect"> <i class="far fa-calendar-alt"></i> Create
                                        Calendar View</a> 
                                </div>
                            </div> -->
                        </div>
                    </div>
                </div>
                <!-- end row -->
                <div id="alert_msg" style="display: none;">
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <table id="datatable-buttons"
                                    class="table table-striped table-hover nowrap"
                                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>User Name</th>
                                            <th>Therapist Name</th>
                                            <th>Session Date</th>
                                            <th>Session Start Time</th>
                                            <th>Session End Time</th>
                                            <th>Amount</th>
                                            <th>ShivYog Share</th>
                                            <th>Therapist Share</th>
                                            <th>Transaction ID</th>
                                            <th>Transaction Method</th>
                                            <th>Transaction Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach(rec=> { %>
                                            <tr>
                                                <td>
                                                    <%= rec.id %>
                                                </td>
                                                <td>
                                                    <%= rec.user_fname+" "+rec.user_lname %></td>
                                            <td><%= rec.therapist_fname+" "+rec.therapist_lname %></td>
                                            
                                            <td><%= rec.session_date %></td>
                                            <td><%= rec.session_start_time %></td>
                                            <td><%= rec.session_end_time %></td>
                                            <td><%= rec.session_price %></td>
                                            <td><%= (rec.session_price*rec.shivyog_share)/100 %></td>
                                             <td>
                                              <%= rec.session_price - (rec.session_price*rec.shivyog_share)/100 %>
                                            </td>
                                            <td><%= rec.transection_id %></td>
                                            <td><%= rec.payment_method %></td>
                                            <td><%= rec.payment_status %></td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div> <!-- container-fluid -->
        </div> <!-- content -->

        <!--  Modal content for the above example -->
        <div class="modal fade" id="share_link_modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <form class="" method="post" id="share_link"
                    action="<%= process.env.AAP_URL %>admin/appointment/sharelink">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title mt-0" id="myLargeModalLabel">Share link
                            </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card m-b-20">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input type="email" name="email" class="form-control input"
                                                            id="f_name" required parsley-type="email"
                                                            placeholder="Mail ID">
                                                        <input type="hidden" name="appointment_id" class="input"
                                                            id="appointment_id">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary waves-effect"
                                data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </div>
                    </div><!-- /.modal-content -->
                </form>
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <%- contentFor('FooterJs') %>

            <!-- Required datatable js -->
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/jquery.dataTables.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/dataTables.bootstrap4.min.js"></script>
            <!-- Buttons examples -->
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/dataTables.buttons.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/buttons.bootstrap4.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/jszip.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/pdfmake.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/vfs_fonts.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/buttons.html5.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/buttons.print.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/buttons.colVis.min.js"></script>
            <!-- Responsive examples -->
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/dataTables.responsive.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/datatables/responsive.bootstrap4.min.js"></script>

            <!-- Datatable init js -->
            <script src="<%= (auth_data.role == 'super_admin' ) ? process.env.AAP_URL+'public/assets/pages/super_admin_datatables.init.js' : process.env.AAP_URL+'public/assets/pages/admin_datatables.init.js'%>"></script>
            <!-- moment for date-->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
            <!--ajax form-->
            <script src="<%= process.env.AAP_URL %>public/plugins/ajax-form/jquery.form.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/parsleyjs/parsley.min.js"></script>
            <script src="<%= process.env.AAP_URL %>public/plugins/sweet-alert2/sweetalert2.min.js"></script>
            <script>
                $(document).ready(function () {
                    $('form').parsley();
                });

                $(document).ready(function () {
                    $('#share_link').ajaxForm({
                        beforeSubmit: function () {

                        },
                        success: function (data) {
                            $(".input").val("");
                            if (data.success == 1) {
                                $("#share_link_modal").modal("hide");
                                // get_data(data.data);
                                alert_msg("success", data.message);
                            } else {
                                alert_msg("error", data.message);
                            }
                        },
                        complete: function (xhr) {

                        }
                    });
                });

                function join_link(appointment_id){
                    $.post('<%= process.env.AAP_URL %>admin/appointment/joinlink',{appointment_id:appointment_id},function(data){
                        if(data.success == 1)
                        {
                            window.open(data.data.zoom_link, '_blank');
                        }else{
                            alert_msg("error", data.message);
                        }
                    },'json');
                }

                function cancel_appointment(id) {
                    swal({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        type: 'warning',
                        showCancelButton: true,
                        confirmButtonClass: 'btn btn-success',
                        cancelButtonClass: 'btn btn-danger m-l-10',
                        confirmButtonText: 'Yes, cancel it!'
                    }).then(function () {
                        $.ajax({
                            url: "<%= process.env.AAP_URL %>admin/appointments/cancel/" + id,
                            type: "get",
                            dataType: "json",
                            success: function (data) {
                                if (data.success == 1) {
                                    get_data(data.data);
                                    alert_msg("success", data.message);
                                } else {
                                    alert_msg("error", data.message);
                                }
                            }
                        });
                    });
                }

                function get_data(data) {
                    var data_table = $('#datatable-buttons').DataTable();
                    data_table.clear().draw();
                    $.each(data, function (index, value) {
                        var status_class = '';
                        var action = '<div class="btn-group m-b-10"><button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>';
                        if (value.status != 2) {
                            action += '<div class="dropdown-menu"><a class="dropdown-item" href="JavaScript:void(0)" onclick="share_link(' + "'" + value.id + "'" + ')">Share link</a><div class="dropdown-divider"></div><a class="dropdown-item" href="JavaScript:void(0)" onclick="join_link(' + "'" + value.id + "'" + ')">Join link</a><div class="dropdown-divider"></div><a class="dropdown-item" href="JavaScript:void(0)" onclick="cancel_appointment(' + "'" + value.id + "'" + ')" title="Cancel">Cancel</a></div>';
                        }
                        action += '</div>';
                        var status = '';
                        if (value.status == 0) {
                            status_class = " warning";
                            var status = "Pending";
                        } else if (value.status == 1) {
                            status_class = "success";
                            status = "Booked";
                        } else if (value.status == 2) {
                            status_class = "danger";
                            status = "Cancelled";
                        } else if (value.status == 3) {
                            status_class = "danger";
                            status = "Reject";
                        }
                        var status_html = '<span class="badge badge-' + status_class + '" style="font-size: 120%;">' + status + '</span>';

                        data_table.row.add([value.id, value.user_fname + " " + value.user_lname, value.therapist_fname + " " + value.therapist_lname, value.session_date, value.session_start_time, value.session_end_time, status_html, action]).draw(false);
                    });
                }

                function share_link(appointment_id) {
                    $(".input").val("");
                    $('#appointment_id').val(appointment_id);
                    $("#share_link_modal").modal('show');
                }

                function alert_msg(status, msg) {
                    //(success,danger)
                    if (status != "success") {
                        status = "danger";
                    }
                    var html = '';
                    html += '<div class="alert alert-' + status + ' alert-dismissible fade show" id="alert_success" role="alert">';
                    html += '<button type="button" class="close" data-dismiss="alert" aria-label="Close">';
                    html += '<span aria-hidden="true">&times;</span>';
                    html += '</button>';
                    html += '<div class="msg">' + msg + '</div>';
                    html += '</div>';
                    $("#alert_msg").html(html);
                    $("#alert_msg").show();
                    setTimeout(function () {
                        $('#alert_msg').hide();
                    }, 5000);
                }
            </script>