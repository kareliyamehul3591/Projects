<!--  Modal content for the above example -->
<style>
      .input-group .parsley-errors-list {
            position: absolute;
            margin-top: 9%;
        }
</style>
<div class="modal fade" id="reset_password_modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
            <form class="" method="post" id="reset_password" action="<%= process.env.AAP_URL %>reset-password">
                  <div class="modal-content">
                        <div class="modal-header">
                              <h5 class="modal-title mt-0" id="myLargeModalLabel">Reset Password
                              </h5>
                              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        </div>
                        <div class="modal-body">
                              <div class="row">
                                    <div class="col-12 reset_password_alert">
                                    </div>
                              </div>
                              <div class="row">
                                    <div class="col-lg-12">
                                          <div class="card m-b-20">
                                                <div class="card-body">
                                                      <div class="row">
                                                            <div class="col-12">
                                                                  <div class="form-group">
                                                                        <label>Current Password</label>
                                                                        <div>
                                                                              <div class="input-group">
                                                                                    <input type="password"
                                                                                          class="form-control input"
                                                                                          name="current_password"
                                                                                          id="current_password"
                                                                                          placeholder="Enter Current Password">
                                                                                          <div class="input-group-append"
                                                                                          id="current_password_eye">
                                                                                          <span
                                                                                                class="input-group-text"><i
                                                                                                      class="mdi mdi-eye"></i></span>
                                                                                    </div>
                                                                              </div><!-- input-group -->
                                                                        </div>
                                                                  </div>
                                                            </div>
                                                      </div>
                                                      <div class="row">
                                                            <div class="col-12">
                                                                  <div class="form-group">
                                                                        <label>New Password</label>
                                                                        <div>
                                                                              <div class="input-group">
                                                                                    <input type="password"
                                                                                          class="form-control input"
                                                                                          name="new_password"
                                                                                          id="new_password"
                                                                                          placeholder="Enter New Password">
                                                                                    <div class="input-group-append"
                                                                                          id="password_eye">
                                                                                          <span
                                                                                                class="input-group-text"><i
                                                                                                      class="mdi mdi-eye"></i></span>
                                                                                    </div>
                                                                              </div><!-- input-group -->
                                                                        </div>
                                                                  </div>
                                                            </div>
                                                      </div>
                                                      <div class="row">
                                                            <div class="col-12">
                                                                  <div class="form-group">
                                                                        <label>Confirm Password</label>
                                                                        <div>
                                                                              <div class="input-group">
                                                                                    <input type="password"
                                                                                          class="form-control input"
                                                                                          name="conpassword"
                                                                                          data-parsley-equalto="#new_password"
                                                                                          id="conpassword"
                                                                                          placeholder="Confirm Password">
                                                                                    <div class="input-group-append"
                                                                                          id="conpassword_eye">
                                                                                          <span
                                                                                                class="input-group-text"><i
                                                                                                      class="mdi mdi-eye"></i></span>
                                                                                    </div>
                                                                              </div><!-- input-group -->
                                                                        </div>
                                                                  </div>
                                                            </div>
                                                      </div>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                        </div>
                        <div class="modal-footer">
                              <button type="button" class="btn btn-secondary waves-effect"
                                    data-dismiss="modal">Cancel</button>
                              <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </div>
                  </div><!-- /.modal-content -->
            </form>
      </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<footer class="footer">
      <!--   © 2018 Lexa - <span class="d-none d-sm-inline-block"> Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesbrand</span> -->
</footer>